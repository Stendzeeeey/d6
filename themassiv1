В массиве Х(N), в котором все элементы различны между собой, найти S1 - сумму положительных элементов массива, 
расположенных после максимального элемента и S2 - сумму отрицательных элементов массива, расположенных до максимального элемента.

#include <windows.h>
#pragma hdrstop
#include "pt4.h"
using namespace std;
int b;
int uaz(int f[],int n){
	int i = 1, max;
	max = f[0];
	while (i < n) {
		if (max < f[i]) {
			max = f[i];
			b = i;
		}
		i++;
	}
	return max;
}
void Solve()
{
    Task("TheMassiv4");
	int n,i=0,f,sum1=0,sum2=0;
	pt >> n;
	int *ggwp = new int[n];
	while (i < n) {
		pt >> f;
		ggwp[i] = f;
		i++;
	}
	f = uaz(ggwp, n);
	i = 1;
	while (i != n-b) {
		if (ggwp[b + i] > 0)
			sum1 += ggwp[b + i];
		i++;
}
	i = 0;
	while (i < b) {
		if (ggwp[i] < 0)
			sum2 += ggwp[i];
		i++;
	}
	pt <<sum1<<sum2;
}
